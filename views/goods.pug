include header
.wrap
  .content
    header.site-header
      include site_header
    .container
      .row
        .col.col-md-12
          h2.panel-title #{goods[0]['name']}
        .col.col-md-4
          img(
            src='images/'+goods[0]['image']
            class='goods-big-image'
          )
        .col.col-md-8
          p #{goods[0]['description']}
          span(class='success') Цена: #{goods[0].cost.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} руб.
          button(
            class='btn btn-primary add-to-cart'
            data-goods_id=goods[0].id
          ) Купить
    include nav
  include footer
